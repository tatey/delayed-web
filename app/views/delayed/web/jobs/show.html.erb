<% title "Job ##{job.id}" %>

<div class="page-header">
  <h1>
    <%= link_to 'Jobs', jobs_path %> / <%= title %>
    <%= button_to 'delete', job_path(job), method: :delete, class: 'btn btn-danger', form_class: 'btn-rails pull-right' %>
  </h1>
</div>

<h2>Last Error</h2>
<pre><%= job.last_error %></pre>

<h2>Handler</h2>
<pre><%= job.handler %></pre>
