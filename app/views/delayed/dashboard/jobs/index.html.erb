<% title 'Jobs' %>

<div class="page-header">
  <h1><%= title %></h1>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Status</th>
      <th>Created At</th>
      <th>Run At</th>
      <th>Attempts</th>
      <th>Last Error</th>
    </tr>
  </thead>
  <tbody>
    <% if jobs.any? %>
      <% jobs.each do |job| %>
        <tr>
          <td>#<%= job.id %></td>
          <td>
            <span class="<%= status_dom_class(job) %>">
              <%= status_text(job).capitalize %>
            </span>
          </td>
          <td><%= job.created_at %></td>
          <td><%= job.run_at %></td>
          <td><%= job.attempts %></td>
          <td><%= link_to_if job.last_error.present?, truncate(job.last_error), job_path(job) %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="6">
          An empty queue is a good queue.
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
